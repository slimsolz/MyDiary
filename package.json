{
  "name": "mydiary",
  "version": "1.0.0",
  "description": "\u001b[2~\u001b[2~An online journal where users can pen down their thoughts and feelings",
  "main": "app.js",
  "scripts": {
    "start-dev": "nodemon server/app.js --exec babel-node",
    "build": "babel server -d server/dist --ignore server/dist",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test": "nyc --reporter=html --reporter=text mocha server/tests/ --exit --compilers js:babel-core/register"
  },
  "nyc": {
    "exclude": [
      "server/tests"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slimsolz/MyDiary.git"
  },
  "author": "Odumah Solomon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/slimsolz/MyDiary/issues"
  },
  "homepage": "https://github.com/slimsolz/MyDiary#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.2",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "lodash.isempty": "^4.4.0",
    "morgan": "^1.9.0",
    "nyc": "^12.0.2",
    "validator": "^10.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-react": "^7.10.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.1"
  }
}
